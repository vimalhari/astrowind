---
import type { CaseStudy } from '../../types/case-study';

export interface Props {
  study: CaseStudy;
}

const { study } = Astro.props;
---

<!-- Simple Results Section -->
<section id="metrics" class="px-4 py-16 mx-auto max-w-6xl lg:px-8">
  <div class="text-center mb-12">
    <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">Project Results</h2>
    <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">Here's what we achieved for this project</p>
  </div>

  <!-- Website Performance -->
  {
    study.data.results.performance && study.data.results.performance.length > 0 && (
      <div class="mb-12">
        <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 text-center">Website Performance</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {study.data.results.performance.map((result) => (
            <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-200 dark:border-gray-700">
              <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">{result.metric}</h4>

              {result.before && result.before !== 'N/A (New Site)' && (
                <div class="mb-3 p-3 bg-red-50 dark:bg-red-900/20 rounded-lg">
                  <span class="text-sm text-red-600 dark:text-red-400 font-medium">Before: </span>
                  <span class="text-sm text-red-700 dark:text-red-300">{result.before}</span>
                </div>
              )}

              <div class="mb-3 p-3 bg-green-50 dark:bg-green-900/20 rounded-lg">
                <span class="text-sm text-green-600 dark:text-green-400 font-medium">Now: </span>
                <span class="text-sm font-semibold text-green-700 dark:text-green-300">{result.after}</span>
              </div>

              <div class="text-center">
                <span class="inline-flex px-4 py-2 text-sm font-medium text-blue-700 dark:text-blue-300 bg-blue-100 dark:bg-blue-900/30 rounded-full">
                  {result.improvement}
                </span>
              </div>
            </div>
          ))}
        </div>
      </div>
    )
  }

  <!-- Business Impact -->
  {
    study.data.results.business && study.data.results.business.length > 0 && (
      <div>
        <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 text-center">Business Impact</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {study.data.results.business.map((result) => (
            <div class="bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-xl p-6 border border-blue-200 dark:border-blue-800">
              <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">{result.metric}</h4>
              <div class="text-3xl font-bold text-blue-600 dark:text-blue-400">{result.improvement}</div>
            </div>
          ))}
        </div>
      </div>
    )
  }
</section>
