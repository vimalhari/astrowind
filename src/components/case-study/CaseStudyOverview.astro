---
import type { CaseStudy } from '../../types/case-study';

export interface Props {
  study: CaseStudy;
}

const { study } = Astro.props;
---

<!-- Clean Project Overview Section -->
<section id="overview" class="px-4 py-12 mx-auto max-w-7xl lg:px-8">
  <div class="grid lg:grid-cols-3 gap-8">
    <!-- Challenge -->
    <div class="space-y-4">
      <div class="flex items-center gap-2 text-sm font-medium text-red-600 dark:text-red-400">
        <div class="w-2 h-2 bg-red-500 rounded-full"></div>
        The Challenge
      </div>
      <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
        {study.data.challenge.description}
      </p>
      <ul class="space-y-2">
        {
          study.data.challenge.points.slice(0, 3).map((point) => (
            <li class="flex items-start gap-2 text-sm text-gray-600 dark:text-gray-400">
              <span class="text-red-500 mt-1">•</span>
              {point}
            </li>
          ))
        }
      </ul>
    </div>

    <!-- Solution -->
    <div class="space-y-4">
      <div class="flex items-center gap-2 text-sm font-medium text-primary">
        <div class="w-2 h-2 bg-primary rounded-full"></div>
        Our Solution
      </div>
      <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
        {study.data.solution.description}
      </p>
      <ul class="space-y-2">
        {
          study.data.solution.approach.slice(0, 3).map((step) => (
            <li class="flex items-start gap-2 text-sm text-gray-600 dark:text-gray-400">
              <span class="text-primary mt-1">•</span>
              {step}
            </li>
          ))
        }
      </ul>
    </div>

    <!-- Results -->
    <div class="space-y-4">
      <div class="flex items-center gap-2 text-sm font-medium text-green-600 dark:text-green-400">
        <div class="w-2 h-2 bg-green-500 rounded-full"></div>
        Results Achieved
      </div>
      <div class="space-y-3">
        {
          study.data.results.performance.slice(0, 3).map((result) => (
            <div class="flex items-center justify-between py-2 border-b border-gray-100 dark:border-gray-700">
              <span class="text-sm text-gray-600 dark:text-gray-400">{result.metric}</span>
              <span class="text-sm font-semibold text-green-600 dark:text-green-400">+{result.improvement}</span>
            </div>
          ))
        }
        {
          study.data.results.business.slice(0, 2).map((result) => (
            <div class="flex items-center justify-between py-2 border-b border-gray-100 dark:border-gray-700">
              <span class="text-sm text-gray-600 dark:text-gray-400">{result.metric}</span>
              <span class="text-sm font-semibold text-green-600 dark:text-green-400">+{result.improvement}</span>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
