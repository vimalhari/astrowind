---
import type { CaseStudy } from '../../types/case-study';

export interface Props {
  study: CaseStudy;
}

const { study } = Astro.props;
---

<!-- Service Category Badge -->{
  study.data.category && (
    <div class="absolute top-3 left-3 z-10">
      <div class="flex items-center gap-1.5 px-2.5 py-1 text-xs font-semibold text-orange-100 bg-primary/80 backdrop-blur-sm rounded-full border border-orange-400/30">
        <div class="w-1.5 h-1.5 bg-orange-100 rounded-full flex-shrink-0" />
        <span>{study.data.category.split('|')[0].trim()}</span>
      </div>
    </div>
  )
}

<!-- Duration Badge -->
<div class="absolute top-11 left-3 z-10">
  <div class="flex items-center gap-1 px-2 py-0.5 text-xs text-white/90 bg-black/20 backdrop-blur-sm rounded-md">
    <svg class="w-2.5 h-2.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
    <span>{study.data.duration}</span>
  </div>
</div>
