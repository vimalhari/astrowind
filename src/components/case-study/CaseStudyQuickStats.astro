---
import type { CaseStudy } from '../../types/case-study';

export interface Props {
  study: CaseStudy;
}

const { study } = Astro.props;
---

<!-- Quick Stats Bar -->
<div class="flex items-center gap-2 text-xs text-white/80">
  <div class="flex items-center gap-1">
    <div class="w-1 h-1 bg-green-400 rounded-full flex-shrink-0"></div>
    <span>Live</span>
  </div>
  <div class="flex items-center gap-1">
    <svg class="w-2.5 h-2.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
    </svg>
    <span>+{study.data.results.performance[0]?.improvement || '200%'}</span>
  </div>
  <div class="flex items-center gap-1">
    <svg class="w-2.5 h-2.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 616 0z"></path>
    </svg>
    <span>{study.data.location}</span>
  </div>
</div>
