---
// WhatsApp floating chat button component

// WhatsApp number configuration
const whatsappNumber = '+447404979307';
const isEnabled = true;

// Format the number for WhatsApp URL (remove + and spaces)
const formattedNumber = whatsappNumber.replace(/[\s+]/g, '');
const whatsappUrl = `https://wa.me/${formattedNumber}`;
---

{
  isEnabled && (
    <div class="group fixed bottom-5 right-5 md:bottom-10 md:right-10 z-50 animate-pulse hover:animate-none transition-transform duration-300 hover:scale-110">
      <a
        href={whatsappUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="relative flex items-center justify-center w-12 h-12 md:w-16 md:h-16 rounded-full bg-gradient-to-br from-green-400 to-green-600 text-white shadow-lg shadow-green-400/40 transition-all duration-300 hover:shadow-xl hover:shadow-green-400/60 hover:-translate-y-0.5 hover:from-green-600 hover:to-green-400 no-underline"
        aria-label="Chat with us on WhatsApp"
      >
        <svg
          width="28"
          height="28"
          viewBox="0 0 24 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          class="w-6 h-6 md:w-7 md:h-7 fill-white transition-transform duration-300 group-hover:scale-110"
        >
          <path
            d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.893 3.690"
            fill="currentColor"
          />
        </svg>

        {/* Tooltip - only shown on desktop */}
        <span class="absolute right-full top-1/2 transform -translate-y-1/2 mr-2 px-3 py-2 bg-green-500 text-white text-sm font-medium rounded-full shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible group-hover:-translate-x-2 transition-all duration-300 whitespace-nowrap hidden md:inline-block">
          Chat with us
          {/* Arrow pointing to button */}
          <span class="absolute left-full top-1/2 transform -translate-y-1/2 border-l-8 border-l-green-500 border-t-8 border-t-transparent border-b-8 border-b-transparent" />
        </span>
      </a>
    </div>
  )
}

<script>
  // Optional: Add click tracking or additional functionality
  document.addEventListener('DOMContentLoaded', function () {
    const whatsappButton = document.querySelector('a[aria-label="Chat with us on WhatsApp"]');

    if (whatsappButton) {
      whatsappButton.addEventListener('click', function () {
        // Optional: Track WhatsApp clicks for analytics
        if (typeof gtag !== 'undefined') {
          gtag('event', 'whatsapp_click', {
            event_category: 'engagement',
            event_label: 'whatsapp_chat',
          });
        }
      });
    }
  });
</script>
