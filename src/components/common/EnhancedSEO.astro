---
interface Props {
  keywords?: string;
  canonical?: string;
  locale?: string;
  publishedTime?: string;
  modifiedTime?: string;
  articleAuthor?: string;
  siteSection?: string;
}

const { keywords, canonical, locale = 'en_GB', publishedTime, modifiedTime, articleAuthor, siteSection } = Astro.props;

const currentUrl = canonical || Astro.url.href;
---

<!-- Enhanced Technical SEO Tags -->
<meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
<meta name="googlebot" content="index, follow" />

<!-- Language and Region -->
<meta name="language" content="English" />
<meta name="geo.region" content="GB" />
<meta name="geo.placename" content="United Kingdom" />

<!-- Additional SEO Meta Tags -->
{keywords && <meta name="keywords" content={keywords} />}
<meta name="rating" content="general" />
<meta name="distribution" content="global" />
<meta name="revisit-after" content="1 days" />

<!-- Article-specific meta tags -->
{publishedTime && <meta name="article:published_time" content={publishedTime} />}
{modifiedTime && <meta name="article:modified_time" content={modifiedTime} />}
{articleAuthor && <meta name="article:author" content={articleAuthor} />}
{siteSection && <meta name="article:section" content={siteSection} />}

<!-- Additional Open Graph for better social sharing -->
<meta property="og:locale" content={locale} />
<meta property="og:site_name" content="Criztec Technologies" />

<!-- Enhanced Twitter Card -->
<meta name="twitter:dnt" content="on" />

<!-- Performance and UX hints -->
<meta name="format-detection" content="telephone=yes" />
<meta name="format-detection" content="address=yes" />

<!-- Preconnect to important domains for performance -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

<!-- DNS prefetch for external resources -->
<link rel="dns-prefetch" href="//www.google-analytics.com" />
<link rel="dns-prefetch" href="//fonts.googleapis.com" />

<!-- Additional SEO signals -->
<meta name="theme-color" content="#3b82f6" />
<meta name="msapplication-TileColor" content="#3b82f6" />
<meta name="application-name" content="Criztec Technologies" />

<!-- Security headers -->
<meta http-equiv="X-Content-Type-Options" content="nosniff" />
<meta http-equiv="X-Frame-Options" content="DENY" />
<meta http-equiv="X-XSS-Protection" content="1; mode=block" />

<!-- Rich snippets hints -->
<meta name="publisher" content="Criztec Technologies" />
{canonical && <link rel="canonical" href={canonical} />}

<!-- Alternative language versions (hreflang) -->
<link rel="alternate" hreflang="en-gb" href={currentUrl} />
<link rel="alternate" hreflang="en" href={currentUrl} />
<link rel="alternate" hreflang="x-default" href={currentUrl} />
