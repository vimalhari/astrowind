---
import type { CollectionEntry } from 'astro:content';

export interface Props {
  study: CollectionEntry<'case-studies'>;
  index: number;
}

const { study, index } = Astro.props;

// Get industry-specific gradient
const getIndustryGradient = (industry: string) => {
  const gradients = {
    'Financial Services': 'from-emerald-500 via-teal-500 to-blue-600',
    Legal: 'from-slate-600 via-gray-700 to-blue-800',
    Healthcare: 'from-rose-400 via-pink-500 to-red-500',
    Technology: 'from-violet-500 via-purple-600 to-indigo-600',
    'E-commerce': 'from-orange-400 via-amber-500 to-yellow-500',
    'Real Estate': 'from-green-500 via-emerald-600 to-teal-600',
  };
  return gradients[industry as keyof typeof gradients] || 'from-blue-500 via-indigo-600 to-purple-600';
};

// Get technology colors
const getTechColors = (techIndex: number) => {
  const colors = [
    'bg-purple-100 text-purple-700 border-purple-200 dark:bg-purple-900/30 dark:text-purple-300 dark:border-purple-700',
    'bg-cyan-100 text-cyan-700 border-cyan-200 dark:bg-cyan-900/30 dark:text-cyan-300 dark:border-cyan-700',
    'bg-orange-100 text-orange-700 border-orange-200 dark:bg-orange-900/30 dark:text-orange-300 dark:border-orange-700',
    'bg-pink-100 text-pink-700 border-pink-200 dark:bg-pink-900/30 dark:text-pink-300 dark:border-pink-700',
  ];
  return colors[techIndex % colors.length];
};

const gradientClass = getIndustryGradient(study.data.industry);
---

<article
  class="case-study-card group bg-white dark:bg-gray-800 rounded-2xl shadow-xl overflow-hidden hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-gray-100 dark:border-gray-700 hover:border-transparent h-full flex flex-col"
  data-category={study.data.category}
  data-industry={study.data.industry}
  data-client={study.data.client.toLowerCase()}
>
  <!-- Enhanced Card Header -->
  <div class={`relative h-48 bg-gradient-to-br ${gradientClass} p-4 overflow-hidden flex-shrink-0`}>
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <svg class="w-full h-full" viewBox="0 0 100 100" fill="none">
        <pattern id={`pattern-${index}`} x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
          <circle cx="10" cy="10" r="1" fill="currentColor"></circle>
        </pattern>
        <rect width="100" height="100" fill={`url(#pattern-${index})`}></rect>
      </svg>
    </div>

    <!-- Industry Badge with Enhanced Design -->
    <div class="absolute top-3 left-3 z-10">
      <div
        class="flex items-center gap-1.5 px-2.5 py-1 text-xs font-semibold text-white bg-white/20 backdrop-blur-sm rounded-full border border-white/20"
      >
        <div class="w-1.5 h-1.5 bg-white rounded-full flex-shrink-0"></div>
        <span>{study.data.industry}</span>
      </div>
    </div>

    <!-- Featured Badge Enhanced -->
    {
      study.data.featured && (
        <div class="absolute top-3 right-3 z-10">
          <div class="flex items-center gap-1 px-2 py-0.5 text-xs font-bold text-amber-800 bg-gradient-to-r from-yellow-200 to-amber-200 rounded-full border border-amber-300/50 shadow-lg">
            <svg class="w-2.5 h-2.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            <span>Featured</span>
          </div>
        </div>
      )
    }

    <!-- Duration Badge -->
    <div class="absolute top-11 left-3 z-10">
      <div class="flex items-center gap-1 px-2 py-0.5 text-xs text-white/90 bg-black/20 backdrop-blur-sm rounded-md">
        <svg class="w-2.5 h-2.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span>{study.data.duration}</span>
      </div>
    </div>

    <!-- Enhanced Content Area -->
    <div class="absolute bottom-3 left-3 right-3 z-10">
      <div class="mb-2">
        <h3 class="text-lg font-bold text-white mb-1 group-hover:text-yellow-100 transition-colors duration-300">
          {study.data.client}
        </h3>
        <p class="text-white/80 text-xs font-medium">
          {study.data.projectType}
        </p>
      </div>

      <!-- Quick Stats Bar -->
      <div class="flex items-center gap-2 text-xs text-white/80">
        <div class="flex items-center gap-1">
          <div class="w-1 h-1 bg-green-400 rounded-full flex-shrink-0"></div>
          <span>Live</span>
        </div>
        <div class="flex items-center gap-1">
          <svg class="w-2.5 h-2.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"
            ></path>
          </svg>
          <span>+{study.data.results.performance[0]?.improvement || '200%'}</span>
        </div>
        <div class="flex items-center gap-1">
          <svg class="w-2.5 h-2.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 616 0z"
            ></path>
          </svg>
          <span>{study.data.location}</span>
        </div>
      </div>
    </div>

    <!-- Decorative Elements -->
    <div class="absolute -top-8 -right-8 w-24 h-24 bg-white/10 rounded-full blur-2xl"></div>
    <div class="absolute -bottom-6 -left-6 w-16 h-16 bg-white/5 rounded-full blur-xl"></div>
  </div>

  <!-- Enhanced Card Content -->
  <div class="p-5 space-y-4 flex-grow flex flex-col">
    <!-- Description -->
    <div class="flex-shrink-0">
      <p class="text-gray-600 dark:text-gray-300 text-sm leading-relaxed">
        {study.data.description}
      </p>
    </div>

    <!-- Enhanced Key Metrics with Visual Indicators -->
    <div class="grid grid-cols-2 gap-3 flex-shrink-0">
      <div
        class="group p-3 bg-gradient-to-br from-green-50 to-emerald-50 dark:from-green-900/20 dark:to-emerald-900/20 rounded-lg border border-green-200 dark:border-green-800/50 hover:shadow-md transition-all duration-300"
      >
        <div class="flex items-center justify-between mb-1">
          <div class="text-lg font-bold text-green-600 dark:text-green-400">
            {study.data.results.performance[0]?.after || 'N/A'}
          </div>
          <div
            class="w-6 h-6 bg-green-100 dark:bg-green-800/50 rounded-md flex items-center justify-center group-hover:scale-110 transition-transform duration-300 flex-shrink-0"
          >
            <svg
              class="w-3 h-3 text-green-600 dark:text-green-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"
              ></path>
            </svg>
          </div>
        </div>
        <div class="text-xs text-gray-600 dark:text-gray-400 font-medium mb-1">
          {study.data.results.performance[0]?.metric || 'Performance'}
        </div>
        {
          study.data.results.performance[0]?.improvement && (
            <div class="flex items-center gap-1">
              <div class="w-full bg-green-200 dark:bg-green-800/30 rounded-full h-1 flex-grow">
                <div
                  class="bg-green-500 h-1 rounded-full"
                  style={`width: ${Math.min(parseInt(study.data.results.performance[0].improvement.replace(/\D/g, '')) || 0, 100)}%`}
                />
              </div>
              <span class="text-xs text-green-600 dark:text-green-400 font-semibold flex-shrink-0">
                +{study.data.results.performance[0].improvement}
              </span>
            </div>
          )
        }
      </div>

      <div
        class="group p-3 bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-lg border border-blue-200 dark:border-blue-800/50 hover:shadow-md transition-all duration-300"
      >
        <div class="flex items-center justify-between mb-1">
          <div class="text-lg font-bold text-blue-600 dark:text-blue-400">
            {study.data.results.business[0]?.improvement || 'Success'}
          </div>
          <div
            class="w-6 h-6 bg-blue-100 dark:bg-blue-800/50 rounded-md flex items-center justify-center group-hover:scale-110 transition-transform duration-300 flex-shrink-0"
          >
            <svg class="w-3 h-3 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
              ></path>
            </svg>
          </div>
        </div>
        <div class="text-xs text-gray-600 dark:text-gray-400 font-medium mb-1">Business Impact</div>
        <div class="flex items-center gap-1">
          <div class="flex-1 bg-blue-200 dark:bg-blue-800/30 rounded-full h-1">
            <div class="bg-blue-500 h-1 rounded-full w-4/5"></div>
          </div>
          <span class="text-xs text-blue-600 dark:text-blue-400 font-semibold flex-shrink-0"> ROI+ </span>
        </div>
      </div>
    </div>

    <!-- Enhanced Technologies Section -->
    <div class="flex-shrink-0">
      <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Technologies Used</h4>
      <div class="flex flex-wrap gap-1.5">
        {
          study.data.technologies.map((tech: { name: string; description: string }, techIndex: number) => (
            <div
              class={`flex items-center gap-1 text-xs px-2 py-1 rounded-md border font-medium transition-all duration-200 hover:scale-105 ${getTechColors(techIndex)}`}
            >
              <div class="w-1 h-1 rounded-full bg-current opacity-60 flex-shrink-0" />
              <span>{tech.name}</span>
            </div>
          ))
        }
      </div>
    </div>

    <!-- Enhanced Actions Section -->
    <div class="flex gap-2 pt-2 mt-auto">
      <a
        href={`/case-studies/${study.id}`}
        class="group flex-1 relative overflow-hidden text-center px-3 py-2 bg-gradient-to-r from-blue-600 to-indigo-600 text-white text-sm font-semibold rounded-lg shadow-md hover:shadow-lg transform hover:scale-105 transition-all duration-300 border border-blue-500"
      >
        <span class="relative z-10">View Study</span>
        <div
          class="absolute inset-0 bg-gradient-to-r from-blue-700 to-indigo-700 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
        >
        </div>
      </a>
      <a
        href={study.data.website}
        target="_blank"
        rel="noopener noreferrer"
        class="group px-3 py-2 border-2 border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 text-sm font-semibold rounded-lg hover:border-blue-500 hover:text-blue-600 dark:hover:text-blue-400 transition-all duration-300 hover:bg-blue-50 dark:hover:bg-blue-900/20 flex-shrink-0"
        title="Visit Live Website"
      >
        <svg
          class="w-4 h-4 group-hover:scale-110 transition-transform duration-300"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
        </svg>
      </a>
    </div>
  </div>

  <!-- Enhanced Card Footer -->
  <div
    class="px-5 py-3 bg-gradient-to-r from-gray-50 to-gray-100 dark:from-gray-700/50 dark:to-gray-800/50 border-t border-gray-200 dark:border-gray-600 flex-shrink-0"
  >
    <div class="flex items-center justify-center">
      <div class="flex items-center gap-1.5 text-xs text-gray-600 dark:text-gray-400">
        <svg class="w-3 h-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M8 7V3a4 4 0 118 0v4m-8 0h16m0 0v11a2 2 0 01-2 2H6a2 2 0 01-2-2V7m16 0H4"></path>
        </svg>
        <span class="font-medium">{study.data.launchDate}</span>
      </div>
    </div>
  </div>
</article>

<style>
  .case-study-card {
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    transform-style: preserve-3d;
    min-height: 0;
  }

  .case-study-card:hover {
    box-shadow:
      0 20px 40px -12px rgba(0, 0, 0, 0.25),
      0 0 0 1px rgba(255, 255, 255, 0.05);
    transform: translateY(-8px) scale(1.02);
  }

  /* Progress bar animations */
  .case-study-card .bg-green-500,
  .case-study-card .bg-blue-500 {
    transition: width 1s ease-out;
    animation: progressGrow 1.5s ease-out;
  }

  @keyframes progressGrow {
    from {
      width: 0%;
    }
    to {
      width: var(--progress-width, 80%);
    }
  }

  /* Mobile optimizations */
  @media (max-width: 768px) {
    .case-study-card:hover {
      transform: translateY(-4px) scale(1.01);
    }
  }

  /* Dark mode enhancements */
  .dark .case-study-card {
    background: linear-gradient(145deg, rgba(31, 41, 55, 0.8), rgba(17, 24, 39, 0.9));
    backdrop-filter: blur(8px);
  }

  .dark .case-study-card:hover {
    box-shadow:
      0 20px 40px -12px rgba(0, 0, 0, 0.5),
      0 0 0 1px rgba(255, 255, 255, 0.1);
  }

  @media (prefers-reduced-motion: reduce) {
    .case-study-card,
    .case-study-card * {
      animation: none !important;
      transition: none !important;
    }
  }
</style>
