---
import type { CollectionEntry } from 'astro:content';

export interface Props {
  study: CollectionEntry<'case-studies'>;
  index: number;
}

const { study, index } = Astro.props;

// Get first performance metric for highlight
const highlightMetric = study.data.results.performance[0];
---

<article
  class="case-study-card group bg-white dark:bg-gray-800/50 rounded-lg overflow-hidden hover:shadow-lg transition-all duration-300 border border-gray-200 dark:border-gray-700 hover:border-primary/30 dark:hover:border-primary/40"
  data-category={study.data.category}
  data-client={study.data.client.toLowerCase()}
>
  <!-- Clean Header with Category Badge -->
  <div class="relative bg-gradient-to-br from-gray-900 to-gray-800 p-5">
    <!-- Category Badge -->
    <span
      class="inline-flex items-center px-2.5 py-1 text-xs font-medium text-primary bg-primary/10 rounded-full border border-primary/20 mb-3"
    >
      {study.data.category}
    </span>

    <!-- Client & Project Type -->
    <h3 class="text-lg font-semibold text-white mb-1 line-clamp-1">
      {study.data.client}
    </h3>
    <p class="text-gray-400 text-sm line-clamp-1">
      {study.data.projectType}
    </p>
  </div>

  <!-- Card Content -->
  <div class="p-5 space-y-4">
    <!-- Description -->
    <p class="text-gray-600 dark:text-gray-300 text-sm leading-relaxed line-clamp-2">
      {study.data.description}
    </p>

    <!-- Single Highlight Metric -->
    {
      highlightMetric && (
        <div class="flex items-center gap-3 p-3 bg-gray-50 dark:bg-gray-800 rounded-lg">
          <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"
              />
            </svg>
          </div>
          <div class="min-w-0">
            <div class="text-xs text-gray-500 dark:text-gray-400 truncate">{highlightMetric.metric}</div>
            <div class="text-sm font-semibold text-gray-900 dark:text-white">+{highlightMetric.improvement}</div>
          </div>
        </div>
      )
    }

    <!-- Technologies - Simplified -->
    <div class="flex flex-wrap gap-1.5">
      {
        study.data.technologies
          .slice(0, 4)
          .map((tech) => (
            <span class="px-2 py-0.5 text-xs text-gray-600 dark:text-gray-400 bg-gray-100 dark:bg-gray-700/50 rounded">
              {tech.name}
            </span>
          ))
      }
      {
        study.data.technologies.length > 4 && (
          <span class="px-2 py-0.5 text-xs text-gray-500 dark:text-gray-500">
            +{study.data.technologies.length - 4}
          </span>
        )
      }
    </div>

    <!-- CTA -->
    <a
      href={`/case-studies/${study.id}`}
      class="flex items-center justify-center gap-2 w-full py-2.5 text-sm font-medium text-white bg-primary hover:bg-secondary rounded-lg transition-colors duration-200"
      aria-label={`View detailed case study for ${study.data.client}`}
    >
      View Case Study
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
      </svg>
    </a>
  </div>
</article>
