---
import { Icon } from 'astro-icon/components';
import { SITE } from 'criztec:config';
import { getHomePermalink } from '~/utils/permalinks';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface Links {
  title?: string;
  links: Array<Link>;
}

export interface Props {
  links?: Array<Links>;
  secondaryLinks?: Array<Link>;
  socialLinks?: Array<Link>;
  footNote?: string;
  theme?: string;
}

const { socialLinks = [], secondaryLinks = [], links = [], footNote = '', theme = 'light' } = Astro.props;
---

<footer
  class:list={[{ dark: theme === 'dark' }, 'relative not-prose bg-gray-50 dark:bg-slate-900 animate-fade-in-up']}
  role="contentinfo"
  aria-label="Site footer"
>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 py-8">
    {/* Main content container */}
    <div class="relative">
      {/* Top section: Logo, Description & Links */}
      <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        {/* Column 1: Company Brand Section */}
        <div class="lg:col-span-1">
          {/* Logo */}
          <div class="mb-6">
            <a
              class="inline-flex items-center font-bold text-xl text-gray-900 dark:text-white hover:text-primary transition-colors duration-200"
              href={getHomePermalink()}
            >
              <span class="bg-gradient-to-r from-primary to-blue-600 bg-clip-text text-transparent">
                {SITE?.name}
              </span>
            </a>
          </div>

          {/* Company Description */}
          <div class="mb-6">
            <p class="text-sm text-gray-600 dark:text-slate-400 leading-relaxed">
              Professional web development, digital marketing & IT support services.
            </p>
          </div>

          {/* Contact Info */}
          <div class="space-y-3 text-sm">
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-blue-100 dark:bg-blue-900/30 rounded-lg flex items-center justify-center">
                <Icon name="tabler:mail" class="w-4 h-4 text-blue-600 dark:text-blue-400" />
              </div>
              <a
                href="mailto:info@criztec.com"
                class="text-gray-700 dark:text-slate-300 hover:text-primary transition-colors duration-200"
              >
                info@criztec.com
              </a>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-green-100 dark:bg-green-900/30 rounded-lg flex items-center justify-center">
                <Icon name="tabler:phone" class="w-4 h-4 text-green-600 dark:text-green-400" />
              </div>
              <a
                href="tel:+447404979307"
                class="text-gray-700 dark:text-slate-300 hover:text-primary transition-colors duration-200"
              >
                +44 7404 979307
              </a>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-purple-100 dark:bg-purple-900/30 rounded-lg flex items-center justify-center">
                <Icon name="tabler:map-pin" class="w-4 h-4 text-purple-600 dark:text-purple-400" />
              </div>
              <span class="text-gray-700 dark:text-slate-300">London, UK</span>
            </div>
          </div>
        </div>

        {/* Navigation Links Grid */}
        <div class="lg:col-span-3">
          <div class="grid grid-cols-2 md:grid-cols-3 gap-8">
            {
              links.map(({ title, links: linkItems }) => (
                <div>
                  <nav aria-labelledby={`footer-${title?.toLowerCase().replace(/\s+/g, '-')}-heading`}>
                    <h3
                      id={`footer-${title?.toLowerCase().replace(/\s+/g, '-')}-heading`}
                      class="text-sm font-semibold text-gray-900 dark:text-white mb-4 uppercase tracking-wider"
                    >
                      {title}
                    </h3>
                    {linkItems && Array.isArray(linkItems) && linkItems.length > 0 && (
                      <ul class="space-y-2" role="list">
                        {linkItems.map(({ text, href, ariaLabel }) => (
                          <li>
                            <a
                              class="text-sm text-gray-600 dark:text-slate-400 hover:text-primary transition-colors duration-200"
                              href={href}
                              aria-label={ariaLabel}
                            >
                              <Fragment set:html={text} />
                            </a>
                          </li>
                        ))}
                      </ul>
                    )}
                  </nav>
                </div>
              ))
            }
          </div>
        </div>
      </div>

      {/* Enhanced Bottom Section */}
      <div class="mt-12 pt-6 border-t border-gray-200 dark:border-slate-700">
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between space-y-8 lg:space-y-0">
          {/* Social Media Links */}
          {
            socialLinks?.length ? (
              <div class="order-2 lg:order-1">
                <h3 class="text-sm font-semibold text-gray-700 dark:text-slate-300 mb-4">Follow Us</h3>
                <div class="flex space-x-4">
                  {socialLinks.map(({ ariaLabel, href, text, icon }) => (
                    <a
                      class:list={[
                        'group relative w-12 h-12 rounded-xl flex items-center justify-center transform hover:scale-110 hover:-translate-y-1 transition-all duration-300 shadow-lg hover:shadow-xl text-white',
                        {
                          'bg-blue-500 hover:bg-blue-600': icon === 'tabler:brand-twitter',
                          'bg-blue-600 hover:bg-blue-700': icon === 'tabler:brand-facebook',
                          'bg-gradient-to-br from-purple-600 via-pink-600 to-yellow-500 hover:from-purple-700 hover:via-pink-700 hover:to-yellow-600':
                            icon === 'tabler:brand-instagram',
                          'bg-blue-700 hover:bg-blue-800': icon === 'tabler:brand-linkedin',
                          'bg-red-600 hover:bg-red-700': icon === 'tabler:brand-youtube',
                          'bg-gray-800 hover:bg-gray-900 dark:bg-gray-700 dark:hover:bg-gray-600':
                            icon === 'tabler:brand-github',
                          'bg-green-500 hover:bg-green-600': icon === 'tabler:brand-whatsapp',
                          'bg-gray-600 hover:bg-gray-700':
                            !icon ||
                            ![
                              'tabler:brand-twitter',
                              'tabler:brand-facebook',
                              'tabler:brand-instagram',
                              'tabler:brand-linkedin',
                              'tabler:brand-youtube',
                              'tabler:brand-github',
                              'tabler:brand-whatsapp',
                            ].includes(icon),
                        },
                      ]}
                      aria-label={ariaLabel}
                      href={href}
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      <div class="transition-all duration-300 group-hover:scale-110">
                        {icon && <Icon name={icon} class="w-5 h-5" />}
                        {!icon && text && <Fragment set:html={text} />}
                      </div>
                      <div class="absolute inset-0 bg-white/20 rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
                    </a>
                  ))}
                </div>
              </div>
            ) : null
          }

          {/* Secondary Links & Legal */}
          <div class="order-1 lg:order-2 text-center lg:text-right">
            <div class="flex flex-wrap justify-center lg:justify-end gap-6 mb-4">
              {
                secondaryLinks.map(({ text, href }) => (
                  <a
                    class="text-sm text-gray-600 dark:text-slate-400 hover:text-primary dark:hover:text-primary transition-colors duration-200 relative group"
                    href={href}
                  >
                    <span class="relative z-10" set:html={text} />
                    <div class="absolute bottom-0 left-0 w-0 h-0.5 bg-primary group-hover:w-full transition-all duration-300" />
                  </a>
                ))
              }
            </div>

            {/* Enhanced Footer Note */}
            <div class="text-sm text-gray-600 dark:text-slate-500 leading-relaxed">
              <Fragment set:html={footNote} />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>

<script>
  // Enhanced footer interactions with pure Tailwind
  document.addEventListener('DOMContentLoaded', () => {
    // Back to top button with Tailwind classes
    const backToTopButton = document.createElement('button');
    backToTopButton.className =
      'fixed bottom-8 right-8 w-12 h-12 bg-gradient-to-br from-primary to-blue-600 border-0 rounded-full text-white text-xl cursor-pointer opacity-0 invisible translate-y-2 transition-all duration-300 ease-out z-[1000] shadow-lg hover:shadow-xl hover:-translate-y-1 hover:scale-105 active:translate-y-0';
    backToTopButton.innerHTML = 'â†‘';
    backToTopButton.setAttribute('aria-label', 'Back to top');
    document.body.appendChild(backToTopButton);

    // Show/hide back to top button
    window.addEventListener('scroll', () => {
      if (window.scrollY > 500) {
        backToTopButton.classList.remove('opacity-0', 'invisible', 'translate-y-2');
        backToTopButton.classList.add('opacity-100', 'visible', 'translate-y-0');
      } else {
        backToTopButton.classList.add('opacity-0', 'invisible', 'translate-y-2');
        backToTopButton.classList.remove('opacity-100', 'visible', 'translate-y-0');
      }
    });

    // Smooth scroll to top
    backToTopButton.addEventListener('click', () => {
      window.scrollTo({
        top: 0,
        behavior: 'smooth',
      });
    });
  });
</script>
