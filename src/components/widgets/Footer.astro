---
import { Icon } from 'astro-icon/components';
import { SITE } from 'criztec:config';
import { getHomePermalink } from '~/utils/permalinks';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface Links {
  title?: string;
  links: Array<Link>;
}

export interface Props {
  links?: Array<Links>;
  secondaryLinks?: Array<Link>;
  socialLinks?: Array<Link>;
  footNote?: string;
  theme?: string;
}

const { socialLinks = [], secondaryLinks = [], links = [], footNote = '', theme = 'light' } = Astro.props;
---

<footer class:list={[{ dark: theme === 'dark' }, 'relative border-t border-gray-200 dark:border-slate-800 not-prose']}>
  {/* Enhanced background styling */}
  <div
    class="absolute inset-0 bg-gradient-to-t from-gray-50 to-transparent dark:from-slate-900 dark:to-transparent pointer-events-none"
    aria-hidden="true"
  >
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 py-12 md:py-16 text-gray-700 dark:text-slate-400">
    {/* Top section: Logo, secondary links, and main links */}
    <div class="grid grid-cols-12 gap-6 md:gap-8">
      {/* Column 1: Logo and Secondary Links */}
      <div class="col-span-12 lg:col-span-4">
        <div class="mb-4">
          <a
            class="inline-block font-bold text-xl text-gray-900 dark:text-white hover:text-primary-800 dark:hover:text-primary-400 transition duration-150 ease-in-out"
            href={getHomePermalink()}>{SITE?.name}</a
          >
        </div>
        <div class="text-sm text-gray-600 dark:text-slate-500 flex flex-wrap gap-x-2 gap-y-1">
          {
            secondaryLinks.map(({ text, href }, index) => (
              <>
                {index !== 0 && <span class="opacity-50">Â·</span>}
                <a
                  class="hover:text-gray-900 dark:hover:text-slate-300 hover:underline transition duration-150 ease-in-out"
                  href={href}
                  set:html={text}
                />
              </>
            ))
          }
        </div>
      </div>

      {/* Columns 2-N: Main Links */}
      {
        links.map(({ title, links: linkItems }) => (
          <div class="col-span-6 sm:col-span-4 md:col-span-3 lg:col-span-2">
            <div class="text-gray-800 dark:text-slate-300 font-semibold mb-3 text-base">{title}</div>
            {linkItems && Array.isArray(linkItems) && linkItems.length > 0 && (
              <ul class="text-sm space-y-2">
                {linkItems.map(({ text, href, ariaLabel }) => (
                  <li>
                    <a
                      class="text-gray-600 dark:text-slate-400 hover:text-gray-900 dark:hover:text-slate-300 hover:underline transition duration-150 ease-in-out"
                      href={href}
                      aria-label={ariaLabel}
                    >
                      <Fragment set:html={text} />
                    </a>
                  </li>
                ))}
              </ul>
            )}
          </div>
        ))
      }
    </div>

    {/* Bottom section: Social links and Footnote */}
    <div
      class="mt-12 md:mt-16 pt-8 border-t border-gray-200 dark:border-slate-800 md:flex md:items-center md:justify-between"
    >
      {/* Social Links */}
      {
        socialLinks?.length ? (
          <ul class="flex justify-center md:order-2 md:justify-start mb-4 md:mb-0 space-x-3">
            {socialLinks.map(({ ariaLabel, href, text, icon }) => (
              <li>
                <a
                  class="text-gray-500 dark:text-slate-500 hover:bg-gray-100 dark:hover:bg-slate-700 hover:text-primary-700 dark:hover:text-primary-400 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center transition duration-150 ease-in-out"
                  aria-label={ariaLabel}
                  href={href}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  {icon && <Icon name={icon} class="w-5 h-5" />}
                  {!icon && text && <Fragment set:html={text} />}
                </a>
              </li>
            ))}
          </ul>
        ) : null
      }

      {/* Footnote */}
      <div class="text-sm text-gray-600 dark:text-slate-500 text-center md:text-left md:order-1">
        <Fragment set:html={footNote} />
      </div>
    </div>
  </div>
</footer>
