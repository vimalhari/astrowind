---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero2.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import heroVideo from '~/assets/videos/herovideo.mp4';

const metadata = {
  title: 'Criztec Technologies - Web & Software Development (Astro, Rails, Django)',
  description:
    'Criztec Technologies: UK-based web & software development specialists (Astro, Ruby on Rails, Django) helping businesses launch faster and automate operations with n8n.',
  keywords:
    'web development, software development, Astro, Ruby on Rails, Django, business automation, n8n, workflow automation, Criztec Technologies, website development, mobile app development',
  ignoreTitleTemplate: true,
  structuredData: {
    '@context': 'https://schema.org',
    '@type': 'Organization',
    name: 'Criztec Technologies',
    description: 'UK-based web & software development (Astro, Ruby on Rails, Django) and business automation (n8n)',
    url: 'https://criztec.com',
    logo: 'https://criztec.com/CriztecLogo.png',
    address: {
      '@type': 'PostalAddress',
      streetAddress: '121 Bath Road',
      addressLocality: 'Slough',
      addressRegion: 'Berkshire',
      postalCode: 'SL1 3UW',
      addressCountry: 'GB',
    },
    contactPoint: {
      '@type': 'ContactPoint',
      telephone: '+44-740-4979-307',
      contactType: 'customer service',
      availableLanguage: 'English',
    },
    sameAs: ['https://twitter.com/Criztec_IT'],
    service: [
      {
        '@type': 'Service',
        name: 'Web Development',
        description: 'Custom website development and web applications',
      },
      {
        '@type': 'Service',
        name: 'Business Automation (n8n)',
        description: 'Workflow automation and integrations using n8n to streamline operations',
      },
      {
        '@type': 'Service',
        name: 'Digital Marketing',
        description: 'SEO, PPC, and social media marketing services',
      },
      {
        '@type': 'Service',
        name: 'Mobile App Development',
        description: 'iOS and Android mobile application development',
      },
    ],
  },
  openGraph: {
    type: 'website',
    locale: 'en_GB',
    images: [
      {
        url: '~/assets/images/hero-image.webp',
        width: 1200,
        height: 630,
        alt: 'Criztec Technologies - Web Development & Digital Marketing',
      },
    ],
  },
  twitter: {
    handle: '@Criztec_IT',
    site: '@Criztec_IT',
    cardType: 'summary_large_image',
  },
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    id="hero"
    tagline="Web & Software Development • Astro • Ruby on Rails • Django"
    subtitle="A UK-based team building high-performance sites with Astro, production-ready apps with Ruby on Rails and Django, and business automation with n8n."
    actions={[
      {
        variant: 'primary',
        text: 'Work with Us',
        href: '/contact',
        // target: '_blank',
        icon: 'tabler:user-plus',
      },
      { variant: 'secondary', text: 'Learn more', href: '#features' },
    ]}
    isDark
  >
    <Fragment slot="bg">
      <video
        src={heroVideo}
        autoplay
        muted
        loop
        playsinline
        preload="metadata"
        class="absolute inset-0 w-full h-full object-cover"
        aria-hidden="true"></video>
      <div class="absolute inset-0 bg-dark/70"></div>
      <div class="absolute inset-0 bg-gradient-to-br from-primary/35 via-transparent to-primary/10"></div>
    </Fragment>

    <Fragment slot="title">
      Building <span class="text-accent dark:text-white"> Websites & Software </span> that ship faster
      <!-- <span class="hidden xl:inline">creating websites with</span>
      <span class="text-accent dark:text-white highlight"> Astro 5.0</span> + Tailwind CSS -->
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Innovative Solutions Delivered', amount: '75+' },
      { title: 'Client Success Rate', amount: '95%' },
      { title: 'Average Client Growth Achieved', amount: '30%' },
      { title: 'Years of Combined Expertise', amount: '100+' },
    ]}
  />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Services"
    title="What we do?"
    subtitle="We build fast websites, robust web apps, and automate business workflows with n8n—so teams ship faster and run smoother."
    items={[
      {
        title: 'Design',
        description:
          'Exceptional design services with a focus on user experience. The design team provides website design, graphic design, video, animation and 3D modelling services.',
        icon: 'tabler:brush', // Or a more suitable design-related icon
      },
      {
        title: 'Development',
        description:
          'We use a wide range of tools to create websites, web portals and applications that are easy to use and maintain.',
        icon: 'tabler:code', // Or a more relevant development icon
      },
      {
        title: 'Business Automation (n8n)',
        description:
          'Automate repetitive workflows and integrate your tools with n8n—saving time, reducing errors, and improving visibility across your business.',
        icon: 'tabler:settings',
      },
      {
        title: 'Digital Marketing',
        description:
          'Professional UK agency offering bespoke, multi-channel digital marketing services to a range of small and large private and public companies.',
        icon: 'tabler:speakerphone', // Or a marketing-related icon like 'tabler:speakerphone'
      },
      {
        title: 'Technical',
        description:
          'Specialist engineers providing consultancy, support, hosting and maintenance to improve reliability, security, and performance.',
        icon: 'tabler:server', // Or an icon related to IT support/infrastructure
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Inside Criztec"
    title="How we can help you?"
    items={[
      {
        title: 'Connect',
        description:
          "We forge powerful connections between businesses and technology, seamlessly integrating innovative solutions that bridge the gap between your brand and your audience. We don't just connect systems; we connect visions.",
        icon: 'tabler:link', // Or a suitable connection-related icon
      },
      {
        title: 'Create',
        description:
          "We design and engineer bespoke digital experiences, tailored to elevate your brand's presence and engage your audience. From visionary concepts to meticulous execution, we create transformative solutions that resonate with your unique identity.",
        icon: 'tabler:bulb', // Or a more relevant creative icon
      },
      {
        title: 'Catalyze',
        description:
          'We ignite your business potential, driving exponential growth with our strategic insights and cutting-edge technology. Our solutions act as a catalyst, propelling you forward to new heights of success and market leadership.',
        icon: 'tabler:rocket', // Or an icon symbolizing growth or acceleration
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Colorful Image',
    }}
  >
    <!-- <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Building on modern foundations</h3>
      Gain a competitive advantage by incorporating industry leading practices
    </Fragment> -->

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts title="Find out more content in our Blog" information={``} count={6} />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Work with us',
        href: '/contact',
        // target: '_blank',
        icon: 'tabler:user-plus',
      },
    ]}
  >
    <Fragment slot="title">
      Criztec&nbsp;+&nbsp;<br class="block sm:hidden" /><span class="sm:whitespace-nowrap">Technologies</span>
    </Fragment>

    <Fragment slot="subtitle">
      Ready to build faster and run smarter? <br class="hidden md:inline" /> Let's discuss your web/software goals and where
      n8n automation can remove bottlenecks.
    </Fragment>
  </CallToAction>
</Layout>

<script>
  import { reset, run } from 'vanilla-cookieconsent';
  import { config } from '../components/common/CookieConsentConfig';

  const resetBtn = document.getElementById('reset-btn');
  const toggleThemeBtb = document.getElementById('toggle-theme-btn');

  resetBtn?.addEventListener('click', () => {
    reset(true);
    run(config);
  });

  toggleThemeBtb?.addEventListener('click', () => {
    document.body.classList.toggle('cc--elegant-black');
  });
</script>
