---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Features2 from '~/components/widgets/Features2.astro';
import ContactForm from '~/components/widgets/ContactForm.astro';

const metadata = {
  title: 'Contact Criztec Technologies | Web Development & Digital Marketing',
  description:
    'Contact Criztec Technologies for expert web development and digital marketing services. Get a free consultation and quote for your project. Call +44 (0) 74049 79307',
  keywords:
    'contact Criztec Technologies, web development contact, digital marketing consultation, free quote, SEO consultation',
  structuredData: {
    '@context': 'https://schema.org',
    '@type': 'ContactPage',
    name: 'Contact Criztec Technologies',
    description: 'Get in touch with Criztec Technologies for web development and digital marketing services',
    mainEntity: {
      '@type': 'Organization',
      name: 'Criztec Technologies',
      telephone: '+44-740-4979-307',
      email: 'info@criztec.com',
      url: 'https://criztec.com',
      address: {
        '@type': 'PostalAddress',
        streetAddress: '121 Bath Road',
        addressLocality: 'Slough',
        addressRegion: 'Berkshire',
        postalCode: 'SL1 3UW',
        addressCountry: 'GB',
      },
      contactPoint: [
        {
          '@type': 'ContactPoint',
          telephone: '+44-740-4979-307',
          contactType: 'customer service',
          areaServed: 'GB',
          availableLanguage: 'English',
        },
        {
          '@type': 'ContactPoint',
          email: 'info@criztec.com',
          contactType: 'customer service',
        },
      ],
    },
  },
  openGraph: {
    type: 'website',
    locale: 'en_GB',
  },
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Want to discuss a project?" />
  <p class="max-w-2xl mx-auto text-center text-lg text-gray-600 dark:text-gray-400 mt-4">
    We are here to help you with your project needs. Whether you have a question, need support, or want to discuss a
    potential collaboration, feel free to reach out to us. Our team is ready to assist you with any inquiries you may
    have. We look forward to hearing from you!
  </p>

  <div class="py-10">
    <ContactForm />
  </div>

  <!-- Features2 Widget ************** -->

  <Features2
    title="We are here to help!"
    items={[
      {
        title: 'General support',
        description:
          'For general inquiries, account assistance, website navigation, or billing questions, our support team is ready to help.',
      },
      {
        title: 'Contact sales',
        description:
          'Have questions about our services, custom solutions, project proposals, or pricing? Get in touch with our sales team.',
      },
      {
        title: 'Technical support',
        description:
          'Experiencing technical difficulties? Contact our experts for assistance with website issues, software problems, or any other technical challenges.',
      },
      {
        title: 'Phone',
        description: '<a href="tel:+447404979307">+44 (0) 74049 79307</a>',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: '<a href="mailto:info@criztec.com">info@criztec.com</a>',
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description: '121 Bath Road, Slough, Berkshire, United Kingdom, SL1 3UW',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
