---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Hero from '~/components/widgets/Hero2.astro';
import Layout from '~/layouts/PageLayout.astro';

const serviceGroups = [
  {
    title: 'Design',
    services: [
      {
        title: 'Logo Design',
        href: '/logo-design',
        description: 'Brand identities and logo systems that look professional across digital and print.',
      },
    ],
  },
  {
    title: 'Development',
    services: [
      {
        title: 'Web App Development (Django + Rails)',
        href: '/web-app-development',
        description:
          'Plan, build, and scale web apps with Ruby on Rails or Django — pragmatic architecture and delivery.',
      },
      {
        title: 'WordPress Website Development',
        href: '/website-development',
        description: 'CMS-driven websites your team can easily edit, with performance and security best practices.',
      },
      {
        title: 'Astro Website Development',
        href: '/astro-site',
        description: 'Astro-first marketing sites for speed, SEO, and excellent Core Web Vitals.',
      },
      {
        title: 'Django Development',
        href: '/django-development',
        description: 'Django apps with clean architecture, strong security defaults, and maintainable delivery.',
      },
      {
        title: 'Ruby on Rails Development',
        href: '/ruby-on-rails-development',
        description:
          'Production-ready Rails web apps with Hotwire-first UX, clean architecture, and pragmatic delivery.',
      },
      {
        title: 'Mobile App Development',
        href: '/mobile-app',
        description: 'Mobile apps built with a clear roadmap, usable UI, and reliable delivery.',
      },
      {
        title: 'Business Automation (n8n)',
        href: '/business-automation',
        description: 'Workflow automation and integrations using n8n to remove manual work and errors.',
      },
    ],
  },
  {
    title: 'Digital Marketing',
    services: [
      {
        title: 'Digital Marketing',
        href: '/digital-marketing',
        description: 'Multi-channel strategy across search, social, content, and performance reporting.',
      },
      {
        title: 'SEO',
        href: '/seo',
        description: 'Technical and on-page SEO to increase qualified traffic and improve rankings.',
      },
      {
        title: 'Social Media Marketing',
        href: '/socialmedia-marketing',
        description: 'Content and campaigns to grow brand awareness and engagement across platforms.',
      },
      {
        title: 'Content Marketing',
        href: '/content-marketing',
        description: 'Content strategy and production to build trust and generate inbound demand.',
      },
    ],
  },
  {
    title: 'Technical',
    services: [
      {
        title: 'IT Support',
        href: '/it-support',
        description: 'Managed IT support, proactive maintenance, and security-first operations.',
      },
    ],
  },
];

const metadata = {
  title: 'Our Services | Web & Software Development, Automation (n8n) | Criztec Technologies',
  description:
    'Comprehensive web & software development, business automation with n8n, and digital services for teams in the UK, Europe, and worldwide. From fast websites and web apps to workflow automation and marketing — we deliver outcomes that scale.',
  keywords:
    'web development services, software development services, business automation, n8n, workflow automation, integrations, custom website development, mobile app development, SEO services, digital marketing services, IT support',
  structuredData: {
    '@context': 'https://schema.org',
    '@type': 'Service',
    name: 'Web & Software Development and Business Automation Services',
    description:
      'Comprehensive services including web & software development (Astro, Ruby on Rails, Django), business automation with n8n, and digital marketing',
    provider: {
      '@type': 'Organization',
      name: 'Criztec Technologies',
      url: 'https://criztec.com',
    },
    areaServed: [
      { '@type': 'Place', name: 'United Kingdom' },
      { '@type': 'Place', name: 'Europe' },
      { '@type': 'Place', name: 'Worldwide' },
    ],
    hasOfferCatalog: {
      '@type': 'OfferCatalog',
      name: 'Digital Services',
      itemListElement: [
        {
          '@type': 'Offer',
          itemOffered: {
            '@type': 'Service',
            name: 'Web Development',
            description: 'Custom website development and web applications',
          },
        },
        {
          '@type': 'Offer',
          itemOffered: {
            '@type': 'Service',
            name: 'Business Automation (n8n)',
            description: 'Workflow automation and integrations using n8n to streamline operations',
          },
        },
        {
          '@type': 'Offer',
          itemOffered: {
            '@type': 'Service',
            name: 'Digital Marketing',
            description: 'SEO, PPC, and social media marketing services',
          },
        },
        {
          '@type': 'Offer',
          itemOffered: {
            '@type': 'Service',
            name: 'Mobile App Development',
            description: 'iOS and Android mobile application development',
          },
        },
        {
          '@type': 'Offer',
          itemOffered: {
            '@type': 'Service',
            name: 'E-commerce Solutions',
            description: 'Online store development and e-commerce platforms',
          },
        },
      ],
    },
  },
  openGraph: {
    type: 'website',
    locale: 'en_GB',
    images: [
      {
        url: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1200&h=630&q=80',
        width: 1200,
        height: 630,
        alt: 'Criztec Technologies Services - Web Development & Digital Marketing',
      },
    ],
  },
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    overlapHeader={false}
    tagline="Our Services"
    title="Comprehensive Digital Solutions"
    subtitle="From custom web development to strategic digital marketing, we provide the complete range of services your business needs to thrive online. Our expert team delivers results-driven solutions tailored to your goals."
    actions={[
      { variant: 'primary', text: 'Get Free Consultation', href: '/contact' },
      { text: 'View Our Work', href: '/about' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Professional team working on digital solutions - Criztec Technologies Services',
    }}
  />

  <section class="py-16 sm:py-24 bg-gray-50">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <h2 class="text-2xl md:text-3xl lg:text-[2rem] font-bold tracking-tight text-gray-900">Browse our services</h2>
        <p class="mt-4 text-base md:text-lg text-gray-600">
          Choose a service to learn more. Each card links to a dedicated page with details and next steps.
        </p>
      </div>

      <div class="mt-12 space-y-14">
        {
          serviceGroups.map((group) => (
            <div>
              <h3 class="text-2xl font-bold text-gray-900">{group.title}</h3>
              <div class="mt-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                {group.services.map((service) => (
                  <a
                    href={service.href}
                    class="group block rounded-xl border border-gray-200 bg-white p-6 hover:shadow-md transition-shadow focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
                    aria-label={`${service.title} service page`}
                  >
                    <h4 class="text-lg font-semibold text-gray-900 group-hover:text-primary transition-colors">
                      {service.title}
                    </h4>
                    <p class="mt-2 text-sm text-gray-600 leading-relaxed">{service.description}</p>
                    <div class="mt-4 text-sm font-medium text-primary group-hover:text-secondary transition-colors">
                      Learn more →
                    </div>
                  </a>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get Free Consultation',
        href: '/contact',
      },
    ]}
    title="Not sure what you need?"
    subtitle="Tell us your goals and we’ll recommend the best service path — from development to automation."
  />
</Layout>
