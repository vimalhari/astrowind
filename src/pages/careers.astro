---
import Layout from '~/layouts/PageLayout.astro';
import { getActiveJobs } from '~/data/jobs';

const metadata = {
  title: 'Careers - Join Our Growing Team | Criztec Technologies',
  description:
    'Join Criztec Technologies and build your career in web development, digital marketing, and technology. Remote opportunities, competitive salaries, and comprehensive benefits.',
  robots: {
    index: true,
    follow: true,
  },
  openGraph: {
    type: 'website',
    title: 'Careers at Criztec Technologies - Remote & Flexible Jobs',
    description:
      'Join our team of innovative developers and digital marketing experts. Remote-first culture, competitive packages, and growth opportunities.',
    image: '~/assets/images/hero-image.webp',
  },
  canonical: 'https://criztec.com/careers',
};

const activeJobs = getActiveJobs();

// Generate JSON-LD structured data for SEO
const structuredData = {
  '@context': 'https://schema.org/',
  '@type': 'Organization',
  name: 'Criztec Technologies',
  url: 'https://criztec.com',
  logo: 'https://criztec.com/assets/images/CriztecLogo.png',
  description: 'Web development and digital marketing agency',
  address: {
    '@type': 'PostalAddress',
    addressCountry: 'GB',
    addressLocality: 'London',
  },
  contactPoint: {
    '@type': 'ContactPoint',
    telephone: '+44-20-XXXX-XXXX',
    contactType: 'HR',
    email: 'careers@criztec.com',
  },
  sameAs: ['https://www.linkedin.com/company/criztec'],
};

// Generate JobPosting structured data for each job
const jobPostings = activeJobs.map((job) => ({
  '@context': 'https://schema.org/',
  '@type': 'JobPosting',
  title: job.title,
  description: job.description,
  identifier: job.id,
  datePosted: job.postedDate,
  employmentType: job.type.toUpperCase().replace('-', '_'),
  hiringOrganization: {
    '@type': 'Organization',
    name: 'Criztec Technologies',
    sameAs: 'https://criztec.com',
  },
  jobLocation: {
    '@type': 'Place',
    address: {
      '@type': 'PostalAddress',
      addressLocality: job.location,
    },
  },
  baseSalary: job.salaryRange
    ? {
        '@type': 'MonetaryAmount',
        currency: job.salaryRange.includes('â‚¹') ? 'INR' : 'GBP',
        value: {
          '@type': 'QuantitativeValue',
          value: job.salaryRange,
        },
      }
    : undefined,
}));
---

<Layout metadata={metadata}>
  <!-- Add JSON-LD structured data -->
  <script is:inline type="application/ld+json" set:html={JSON.stringify(structuredData)} />

  <!-- Add job posting structured data -->
  {jobPostings.map((job) => <script is:inline type="application/ld+json" set:html={JSON.stringify(job)} />)}

  <!-- Hero Section - Simplified -->
  <section class="relative px-4 py-16 mx-auto max-w-7xl lg:px-8 lg:py-24 text-center">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white mb-6">
        Join Our <span class="text-blue-600">Growing Team</span>
      </h1>
      <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 mb-8 leading-relaxed">
        Build your career with innovative web development and digital marketing projects. Remote-first culture with
        competitive benefits.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="#open-positions"
          class="inline-flex items-center justify-center px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6M8 6V4a2 2 0 012-2h4a2 2 0 012 2v2m-8 0h8"
            ></path>
          </svg>
          View Open Positions
        </a>
        <a
          href="mailto:careers@criztec.com"
          class="inline-flex items-center justify-center px-6 py-3 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 font-semibold rounded-lg hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
            ></path>
          </svg>
          Send Resume
        </a>
      </div>
    </div>
  </section>

  <!-- Why Join Us - Simplified -->
  <section class="px-4 py-16 mx-auto max-w-7xl lg:px-8 bg-gray-50 dark:bg-gray-900">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">Why Choose Criztec?</h2>
      <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
        Join a team that values innovation, growth, and work-life balance
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
      <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-md">
        <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Remote-First Culture</h3>
        <p class="text-gray-600 dark:text-gray-300">Work from anywhere with flexible hours and modern tools.</p>
      </div>

      <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-md">
        <div class="w-12 h-12 bg-green-100 dark:bg-green-900 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"
            ></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Career Growth</h3>
        <p class="text-gray-600 dark:text-gray-300">Continuous learning opportunities and clear advancement paths.</p>
      </div>

      <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-md">
        <div class="w-12 h-12 bg-purple-100 dark:bg-purple-900 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"
            ></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Competitive Package</h3>
        <p class="text-gray-600 dark:text-gray-300">Market-competitive salaries with comprehensive benefits.</p>
      </div>
    </div>

    <!-- Key Benefits Summary -->
    <div class="bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg p-8 text-white text-center">
      <h3 class="text-2xl font-bold mb-4">What We Offer</h3>
      <div class="flex flex-wrap justify-center gap-4 text-sm">
        <span class="bg-white/20 px-3 py-1 rounded-full">Health Insurance</span>
        <span class="bg-white/20 px-3 py-1 rounded-full">Learning Budget</span>
        <span class="bg-white/20 px-3 py-1 rounded-full">Flexible PTO</span>
        <span class="bg-white/20 px-3 py-1 rounded-full">Performance Bonuses</span>
        <span class="bg-white/20 px-3 py-1 rounded-full">Modern Equipment</span>
      </div>
    </div>
  </section>

  <!-- Open Positions - Simplified -->
  <section id="open-positions" class="px-4 py-16 mx-auto max-w-7xl lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">Open Positions</h2>
      <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
        Explore exciting career opportunities and find the perfect role for your skills
      </p>
    </div>

    {
      activeJobs.length > 0 ? (
        <div class="space-y-6">
          {activeJobs.map((job) => (
            <article class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 border border-gray-200 dark:border-gray-700 hover:shadow-lg transition-shadow">
              <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
                <div>
                  <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">{job.title}</h3>
                  <div class="flex flex-wrap gap-4 text-sm text-gray-600 dark:text-gray-300">
                    <span class="flex items-center">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
                        />
                      </svg>
                      {job.department}
                    </span>
                    <span class="flex items-center">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                        />
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                        />
                      </svg>
                      {job.location}
                    </span>
                    <span class="flex items-center">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                        />
                      </svg>
                      {job.type}
                    </span>
                    <span class="flex items-center">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                        />
                      </svg>
                      {job.experience}
                    </span>
                  </div>
                </div>
                <div class="flex flex-col sm:flex-row gap-3 mt-4 md:mt-0">
                  {job.salaryRange && (
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200">
                      {job.salaryRange}
                    </span>
                  )}
                  <a
                    href={`mailto:careers@criztec.com?subject=Application for ${job.title}&body=Hi, I would like to apply for the ${job.title} position.`}
                    class="inline-flex items-center justify-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors"
                  >
                    Apply Now
                  </a>
                </div>
              </div>

              <p class="text-gray-600 dark:text-gray-300 mb-4 leading-relaxed">{job.description}</p>

              <details class="group">
                <summary class="cursor-pointer list-none flex items-center text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 font-medium">
                  <svg
                    class="w-4 h-4 mr-2 transition-transform group-open:rotate-90"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                  View Details
                </summary>
                <div class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-600 space-y-4">
                  {job.requirements.length > 0 && (
                    <div>
                      <h4 class="font-semibold text-gray-900 dark:text-white mb-2">Requirements:</h4>
                      <ul class="list-disc list-inside text-sm text-gray-600 dark:text-gray-300 space-y-1">
                        {job.requirements.slice(0, 5).map((req) => (
                          <li>{req}</li>
                        ))}
                        {job.requirements.length > 5 && (
                          <li class="text-blue-600 dark:text-blue-400">
                            + {job.requirements.length - 5} more requirements
                          </li>
                        )}
                      </ul>
                    </div>
                  )}

                  {job.responsibilities.length > 0 && (
                    <div>
                      <h4 class="font-semibold text-gray-900 dark:text-white mb-2">Key Responsibilities:</h4>
                      <ul class="list-disc list-inside text-sm text-gray-600 dark:text-gray-300 space-y-1">
                        {job.responsibilities.slice(0, 4).map((resp) => (
                          <li>{resp}</li>
                        ))}
                        {job.responsibilities.length > 4 && (
                          <li class="text-blue-600 dark:text-blue-400">
                            + {job.responsibilities.length - 4} more responsibilities
                          </li>
                        )}
                      </ul>
                    </div>
                  )}
                </div>
              </details>
            </article>
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <div class="text-6xl mb-4">ðŸ’¼</div>
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">No Open Positions</h3>
          <p class="text-gray-600 dark:text-gray-300 mb-6 max-w-md mx-auto">
            We're always looking for talented individuals. Send us your resume and we'll keep you in mind for future
            opportunities.
          </p>
          <a
            href="mailto:careers@criztec.com"
            class="inline-flex items-center justify-center px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              />
            </svg>
            Send Resume
          </a>
        </div>
      )
    }
  </section>

  <!-- Contact Section -->
  <section class="px-4 py-16 mx-auto max-w-7xl lg:px-8 bg-gray-50 dark:bg-gray-900">
    <div class="text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">Ready to Join Us?</h2>
      <p class="text-lg text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto">
        Have questions about working at Criztec? We'd love to hear from you.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="mailto:careers@criztec.com"
          class="inline-flex items-center justify-center px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
            ></path>
          </svg>
          Contact HR
        </a>
        <a
          href="/contact"
          class="inline-flex items-center justify-center px-6 py-3 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 font-semibold rounded-lg hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
            ></path>
          </svg>
          General Inquiries
        </a>
      </div>
    </div>
  </section>
</Layout>
