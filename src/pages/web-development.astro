---
import Layout from '../layouts/PageLayout.astro';
import { cities } from '../data/cities';
import Hero from '~/components/widgets/Hero2.astro';

const metadata = {
  title: 'Professional Web Development Services | Criztec Technologies',
  description:
    'Astro-first web development for businesses in the UK, Europe, and worldwide. Fast websites, e-commerce, and web apps — plus WordPress to Astro migrations and WordPress management. Contact our team today.',
  keywords:
    'astro web development, astro framework, website development, custom web applications, e-commerce development, responsive web design, React development, Node.js development, wordpress to astro migration, wordpress management, wordpress maintenance',
  canonical: `${Astro.site}web-development/`,
  structuredData: {
    '@context': 'https://schema.org',
    '@type': 'Service',
    name: 'Web Development Services',
    description: 'Professional web development and digital solutions for businesses in the UK, Europe, and worldwide',
    provider: {
      '@type': 'Organization',
      name: 'Criztec Technologies',
      url: 'https://criztec.com',
    },
    areaServed: [
      { '@type': 'Place', name: 'United Kingdom' },
      { '@type': 'Place', name: 'Europe' },
      { '@type': 'Place', name: 'Worldwide' },
    ],
    serviceType: 'Web Development',
    offers: [
      {
        '@type': 'Offer',
        name: 'Custom Website Development',
        description: 'Bespoke website development tailored to your business needs',
      },
      {
        '@type': 'Offer',
        name: 'E-commerce Development',
        description: 'Online store development with secure payment processing',
      },
      {
        '@type': 'Offer',
        name: 'Web Application Development',
        description: 'Complex web applications and software solutions',
      },
    ],
  },
  openGraph: {
    type: 'website',
    locale: 'en_GB',
  },
};
---

<Layout metadata={metadata}>
  <Hero
    overlapHeader={false}
    tagline="Web Development"
    title="Professional Web Development Services"
    subtitle="Astro-first web development for businesses in the UK, Europe, and worldwide. We build fast websites, e-commerce solutions, and web applications — and we also handle WordPress to Astro migrations and ongoing WordPress management."
    actions={[
      { variant: 'primary', text: 'Book a Free Consultation', href: '/contact' },
      { text: 'Explore Digital Marketing', href: '/digital-marketing' },
    ]}
    image={{ src: '~/assets/images/hero-image.webp', alt: 'Professional Web Development Services' }}
  />

  <section class="py-16 sm:py-24 bg-gray-50">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-lg text-gray-700 max-w-4xl mx-auto leading-relaxed mb-16">
        <p class="mb-4">
          We primarily build modern, high-performance sites with the Astro framework. Whether you need a simple business
          website, a complex web application, or comprehensive <a
            href="/seo"
            class="text-blue-600 hover:text-blue-800 underline">SEO optimization</a
          >, we deliver solutions that exceed expectations.
        </p>
        <p class="mb-6">
          If you're on WordPress today, we can migrate you to Astro (keeping content and SEO in mind) or manage your
          existing WordPress site with updates, security, and support. We serve businesses across the South East of
          England with reliable, scalable web solutions. <a
            href="/contact"
            class="text-blue-600 hover:text-blue-800 underline">Contact our local web development team</a
          > to discuss your project requirements.
        </p>
      </div>

      <!-- Services Section -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 text-center mb-12">Our Web Development Services</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">Astro Website Development</h3>
            <p class="text-gray-600">
              Fast, modern websites built with the Astro framework for excellent SEO, performance, and maintainability.
            </p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">Custom Website Development</h3>
            <p class="text-gray-600">
              Bespoke websites tailored to your business needs with modern design and functionality.
            </p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">E-commerce Solutions</h3>
            <p class="text-gray-600">
              Secure online stores with payment processing, inventory management, and customer portals.
            </p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">Web Applications</h3>
            <p class="text-gray-600">
              Complex web applications and software solutions for business automation and efficiency.
            </p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">WordPress to Astro Migration</h3>
            <p class="text-gray-600">
              Move from WordPress to Astro with a clean rebuild, content migration, and SEO-aware redirects.
            </p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">WordPress Management</h3>
            <p class="text-gray-600">
              Ongoing updates, security, backups, and support for teams that want to keep their existing WordPress site.
            </p>
          </div>
        </div>
      </div>

      <!-- Why Choose Our Web Development Services -->
      <section class="py-16 bg-white">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold text-gray-900 text-center mb-12">Why Choose Criztec for Web Development?</h2>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
            <div>
              <h3 class="text-2xl font-semibold text-gray-900 mb-4">Modern Technology Stack</h3>
              <p class="text-gray-600 mb-4">
                We use cutting-edge technologies including React, Vue.js, Node.js, and cloud platforms to ensure your
                website is fast, secure, and scalable. Our development approach follows industry best practices for
                performance optimization and search engine visibility.
              </p>
              <p class="text-gray-600">
                All websites are built with mobile-first responsive design, ensuring perfect functionality across all
                devices and browsers.
              </p>
            </div>

            <div>
              <h3 class="text-2xl font-semibold text-gray-900 mb-4">Local Expertise, Global Standards</h3>
              <p class="text-gray-600 mb-4">
                With deep understanding of diverse business landscapes, we create websites that resonate with your
                audience while meeting international web standards.
              </p>
              <p class="text-gray-600">
                Our team combines local market knowledge with global technical expertise to deliver solutions that drive
                real business results.
              </p>
            </div>
          </div>

          <div class="bg-gray-50 p-8 rounded-lg">
            <h3 class="text-2xl font-semibold text-gray-900 mb-4 text-center">Our Web Development Process</h3>
            <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
              <div class="text-center">
                <div
                  class="bg-blue-600 text-white rounded-full w-12 h-12 flex items-center justify-center mx-auto mb-3 font-bold"
                >
                  1
                </div>
                <h4 class="font-semibold text-gray-900 mb-2">Discovery & Planning</h4>
                <p class="text-sm text-gray-600">Understanding your business goals and technical requirements</p>
              </div>
              <div class="text-center">
                <div
                  class="bg-blue-600 text-white rounded-full w-12 h-12 flex items-center justify-center mx-auto mb-3 font-bold"
                >
                  2
                </div>
                <h4 class="font-semibold text-gray-900 mb-2">Design & Prototyping</h4>
                <p class="text-sm text-gray-600">Creating user-centered designs and interactive prototypes</p>
              </div>
              <div class="text-center">
                <div
                  class="bg-blue-600 text-white rounded-full w-12 h-12 flex items-center justify-center mx-auto mb-3 font-bold"
                >
                  3
                </div>
                <h4 class="font-semibold text-gray-900 mb-2">Development & Testing</h4>
                <p class="text-sm text-gray-600">Building robust, scalable solutions with comprehensive testing</p>
              </div>
              <div class="text-center">
                <div
                  class="bg-blue-600 text-white rounded-full w-12 h-12 flex items-center justify-center mx-auto mb-3 font-bold"
                >
                  4
                </div>
                <h4 class="font-semibold text-gray-900 mb-2">Launch & Support</h4>
                <p class="text-sm text-gray-600">Seamless deployment with ongoing maintenance and support</p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Cities Grid -->
      <div class="mb-10 text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Web Development in Your Area</h2>
        <p class="text-gray-600 max-w-3xl mx-auto">
          Choose your nearest location to see local web development services, examples, and a quick way to get a
          tailored quote.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          cities.map((city) => (
            <a
              href={`/web-development/${city.slug}`}
              class="group bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
            >
              <div class="p-8">
                <div class="flex items-center mb-4">
                  <svg class="w-5 h-5 text-blue-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path
                      fill-rule="evenodd"
                      d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  <span class="text-sm font-medium text-blue-600">{city.region}</span>
                </div>
                <h2 class="text-2xl font-bold text-gray-900 mb-4 group-hover:text-blue-600 transition-colors">
                  {city.name}
                </h2>
                <p class="text-gray-600 mb-6 leading-relaxed">{city.subheading}</p>

                <div class="flex flex-wrap gap-2 mb-6">
                  {city.keyIndustries.slice(0, 3).map((industry) => (
                    <span class="inline-flex items-center rounded-full bg-gray-100 px-3 py-1 text-xs text-gray-600">
                      {industry}
                    </span>
                  ))}
                </div>

                <div class="text-center">
                  <span class="inline-flex items-center text-blue-600 font-semibold group-hover:text-blue-700 transition-colors">
                    View Services
                    <svg
                      class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17 8l4 4m0 0l-4 4m4-4H3"
                      />
                    </svg>
                  </span>
                </div>
              </div>
            </a>
          ))
        }
      </div>

      <!-- Contact Section -->
      <div class="mt-20 text-center">
        <div class="bg-gradient-to-r from-blue-600 to-indigo-600 rounded-2xl p-8 text-white">
          <h3 class="text-2xl font-bold mb-4">Don't See Your Area?</h3>
          <p class="text-blue-100 mb-6 max-w-2xl mx-auto">
            We serve businesses across the UK, Europe, and worldwide. Contact us to discuss your project wherever you're
            located.
          </p>
          <a
            href="/contact"
            class="inline-flex items-center bg-white text-blue-600 px-8 py-4 rounded-lg font-semibold hover:bg-blue-50 transition-colors"
          >
            Book a Free Consultation
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
