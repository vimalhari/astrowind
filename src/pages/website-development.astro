    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Criztec Hero Image',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Built for Experience"
    subtitle="Our team of skilled web developers is ready to collaborate with you to create an engaging and functional website that makes your business accessible. We utilize top open-source platforms to ensure your website remains secure and at the forefront of technological advancements."
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

